<Window x:Class="CLWD.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="125" Width="303">
    <Grid>
        <Button Content="Sign in" Height="23" HorizontalAlignment="Left" Margin="193,46,0,0" Name="button1" VerticalAlignment="Top" Width="75" Command="{Binding LoginAction}" />
        <Label Content="ID" Height="28" HorizontalAlignment="Left" Margin="39,14,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="0,45,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="67,46,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" Text="{Binding Password}"/>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="67,14,0,0" Name="textBox2" VerticalAlignment="Top" Width="120" Text="{Binding ID}" />
        <CheckBox Content="Save" Height="16" HorizontalAlignment="Left" Margin="193,19,0,0" Name="checkBox1" VerticalAlignment="Top" />
    </Grid>
</Window>

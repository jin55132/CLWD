<Window x:Class="CLWD.Book"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CLWD.ViewModel"
        Title="MainWindow" Height="350" Width="525">

    <Grid IsEnabled="{Binding Path=Signed}">
        <DataGrid Name="dataGrid1" ItemsSource="{Binding Path=Book}" IsEnabled="{Binding Path=Authorized}"  AutoGenerateColumns="False">

            <DataGrid.Columns>
                    <DataGridTextColumn Width="1*" Header="Word" Binding="{Binding Path=Word}" />
                    <DataGridTextColumn Width="2*" Header="Meaning" Binding="{Binding Path=Meaning}" />
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

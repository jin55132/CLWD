<Window x:Class="CLWD.Book"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CLWD.ViewModel"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen" Closing="Window_Closing">


    <DockPanel>
        
        <DockPanel DockPanel.Dock="Top" KeyboardNavigation.TabNavigation="None">
            <Menu KeyboardNavigation.TabNavigation="Cycle">
                <MenuItem Header="_Account">
                    <MenuItem Header="Sign _in" Command="{Binding Path=LoginCommand}" />
                    <MenuItem Header="Sign _out" Command="{Binding Path=LogoutCommand}" />
                    
                </MenuItem>
                <MenuItem Header="_Edit" />
                <MenuItem Header="_Options" />
                <MenuItem Header="_Help" />
            </Menu>
        </DockPanel>

        <DataGrid Name="dataGrid1" ItemsSource="{Binding Path=Book}"   AutoGenerateColumns="False" Margin="0,0,0,0" IsEnabled="{Binding Path=Authorized}">

            <DataGrid.Columns>
                    <DataGridTextColumn Width="1*" Header="Word" Binding="{Binding Path=Word}" />
                    <DataGridTextColumn Width="2*" Header="Meaning" Binding="{Binding Path=Meaning}" />
                
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>

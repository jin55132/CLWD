<Window x:Class="CLWD.Book"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CLWD.ViewModel"
        Title="MainWindow" Height="350" Width="525">


    <DockPanel>
        
        <DockPanel DockPanel.Dock="Top" KeyboardNavigation.TabNavigation="None">
            <Menu KeyboardNavigation.TabNavigation="Cycle">
                <MenuItem Header="_File">
                    <MenuItem Header="E_xit" Command="{Binding Path=CloseCommand}" />
                </MenuItem>
                <MenuItem Header="_Edit" />
                <MenuItem Header="_Options" />
                <MenuItem Header="_Help" />
            </Menu>
        </DockPanel>
        
        <DataGrid Name="dataGrid1" ItemsSource="{Binding Path=Book}" IsEnabled="{Binding Path=Authorized}"  AutoGenerateColumns="False" Margin="0,0
                  ,0,0">

            <DataGrid.Columns>
                    <DataGridTextColumn Width="1*" Header="Word" Binding="{Binding Path=Word}" />
                    <DataGridTextColumn Width="2*" Header="Meaning" Binding="{Binding Path=Meaning}" />
                
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
